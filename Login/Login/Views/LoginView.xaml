<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.Views.LoginView">

  <StackLayout Padding="20" Spacing="20">
    <Entry Text="{Binding Email}" Keyboard="Email" Placeholder="email@domain.com"></Entry>
    <Entry IsPassword="true" Text="{Binding Password}" Placeholder="password"></Entry>
    <Button Text="Login" Command="{Binding LoginCommand}"></Button>
    <Button Text="Register" Command="{Binding RegisterCommand}"></Button>
  </StackLayout>

</ContentPage>